
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index2</title>
    <link href="~/Content/AnimatedCheckbox.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-theme.css" rel="stylesheet" />

</head>
<body>



    <div class="row"> 
        <div class="col-md-12">
            <div class="form-horizonal">

                <div class="form-group">
                   <label class="col-md-2 control-label"> Ödeme Durumu: </label>                    
                    <div class="col-md-10 checkbox">             
                        <label>
                            @Html.CheckBox("odeme", false)
                            <span class="cr"><i class="cr-icon glyphicon glyphicon-ok"></i></span>
                        <span>Ödendi</span>
                        </label>
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-md-2 control-label"> Alındı Durumu: </label>
                    <div class="col-md-10 checkbox">
                        <label>
                            @Html.CheckBox("Alındı", false)
                            <span class="cr"><i class="cr-icon glyphicon glyphicon-ok"></i></span>
                        <span>Alındı</span>
                        </label>
                    </div>
                </div>

            </div>

        </div>

    </div>
</body>
</html>
